{{ ansible_managed | comment }}

[Unit]
Description=karma Alertmanager dashboard
After=network-online.target
Wants=network-online.target
StartLimitInterval=0
StartLimitIntervalSec=0

[Service]
Type=simple
User={{ karma_system_user }}
Group={{ karma_system_group }}
ExecStart=/usr/bin/karma-linux-{{ go_arch }} --config.file {{ karma_configuration_file }} --listen.address {{ karma_web_listen_address }} --listen.port {{ karma_web_listen_port }} --alertmanager.uri {{ alertmanager_uri }}
SyslogIdentifier=karma
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
